<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 
    <item android:state_focused="true"
		android:state_pressed="false"
		android:drawable="@drawable/play_button" />
    <item android:state_focused="true"
    	  android:state_pressed="true"
    	  android:drawable="@drawable/play_button_pressed" />
    <item android:state_focused="false"
    	  android:state_pressed="true"
		  android:drawable="@drawable/play_button_pressed" />
		   -->
    <item android:state_selected="true">
       <layer-list>
            <item>
                <shape android:shape="oval">
					<gradient android:type="radial" android:gradientRadius="50"
					     android:startColor="#CDFFFFFF" android:endColor="#CDCCCCCC"					     
					     android:centerX="0.6" android:centerY="0.6" />

					<stroke android:width="2dp" android:color="#FF4CFF00" />

					<size android:width="80dp" android:height="80dp"/>
				</shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
					<gradient android:type="radial" android:gradientRadius="50"
					     android:startColor="#CDFFFFFF" android:endColor="#CDCCCCCC"					     
					     android:centerX="0.25" android:centerY="0.25" />

					<stroke android:width="2dp" android:color="#FF4CFF00" />

					<size android:width="80dp" android:height="80dp"/>
				</shape>
            </item>
        </layer-list>
    </item>

</selector>